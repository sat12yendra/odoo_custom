<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="biometric_device_config_view_form" model="ir.ui.view">
        <field name="name">biometric.config.form</field>
        <field name="model">biometric.config</field>
        <field name="arch" type="xml">
            <form string="Biometric Device">
                <header>
                    <field name="state" widget="statusbar"
                           invisible="not is_adms"
                           statusbar_visible="not_connected,connected"/>
                    <button name="check_connection" type="object"
                            class="oe_highlight"
							string="Check Connection" invisible="not is_adms"
							help="This will upload settings from software to device"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="test_device_connection" class="oe_stat_button"
                                invisible="is_adms"
                                icon="fa-plug" type="object" string="Test Connection"/>
                        <button name="sync_employees" class="oe_stat_button"
                                invisible="is_adms"
                                icon="fa-retweet" type="object" string="Sync Employees"/>
                        <button name="download_attendance_log" class="oe_stat_button"
                                invisible="is_adms"
                                icon="fa-download" type="object"
                                string="Download Attendance"/>
                        <button name="download_device_users"
                                type="object"
                                icon="fa-download"
                                invisible="not is_adms"
                                string="Download Device Users"
                                class="oe_stat_button"/>
                        <button name="export_employee"
                                type="object"
                                icon="fa-share-square"
                                invisible="not is_adms"
                                string="Export Employee"
                                class="oe_stat_button"/>
                        <field name="attendance_log_count" invisible="1"/>
                        <button name="action_open_device_logs"
                                type="object"
                                icon="fa-list"
                                invisible="not is_adms"
                                string="Attendance Logs"
                                class="oe_stat_button">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Data Logs</span>
                                <span class="o_stat_value">
                                    <field name="attendance_log_count"/>
                                </span>
                            </div>
                        </button>
                        <field name="command_count" invisible="1"/>
                        <button name="action_open_commands"
                                type="object"
                                icon="fa-terminal"
                                invisible="not is_adms"
                                string="Command To Device"
                                class="oe_stat_button">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Command To Device
                                </span>
                                <span class="o_stat_value">
                                    <field name="command_count"/>
                                </span>
                            </div>
                        </button>
                        <button name="action_open_finger_prints"
                                type="object"
                                icon="fa-address-card"
                                invisible="not is_adms"
                                string="Finger Prints"
                                class="oe_stat_button"/>
                    </div>
                    <div class="oe_title" name="title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Device Reference"/>
                        </h1>
                    </div>
                    <group colspan="4" cols="4">
                        <group>
                            <field name="device_ip" required="not is_adms"
                                   invisible="is_adms"/>
                            <field name="port" required="not is_adms"
                                   invisible="is_adms"/>
                            <field name="serial_number" required="is_adms"
                                   invisible="not is_adms"/>
                            <field name="is_adms" widget="boolean_toggle"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="is_password_set"/>
                            <field name="device_password" password="True"
                                   invisible="is_password_set == False"
                                   required="is_password_set == True"/>
<!--                                   attrs="{'invisible':[('is_password_set','=', False)], 'required': [('is_password_set', '=', True)]}"/>-->
                            <field name="time_zone"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="adms_settings" string="Adms Settings"
                              invisible="not is_adms">
                            <group>
                                <field name="delay"/>
                                <field name="error_delay"/>
                                <field name="real_time"/>
                                <field name="trans_interval"/>
                            </group>
                        </page>
                        <page name="users" string="Users"
                              invisible="not is_adms">
                            <field name="biometric_attendance_user_ids">
                                <tree string="Users">
                                    <field name="device_user_name"/>
                                    <field name="biometric_attendance_id"/>
                                    <field name="employee_id"/>
                                </tree>
                            </field>
                        </page>
                        <page name="attendance_status_code" string="Status Codes"
                              invisible="not is_adms">
                            <field name="attendance_status_ids">
                                <tree string="Status Codes">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="activity_type"/>
                                </tree>
                            </field>
                        </page>
                        <page name="op_stamp_log" string="Op Stamp Log"
                              invisible="1">
                            <field name="op_stamp_log_ids">
                                <tree string="Logs">
                                    <field name="name"/>
                                    <field name="log_date"/>
                                    <field name="log_text"/>
                                    <field name="opStamp"/>
                                </tree>
                            </field>
                        </page>
                        <page name="stamp_log" string="Stamp Log"
                              invisible="1">
                            <field name="stamp_log_ids">
                                <tree string="Logs">
                                    <field name="name"/>
                                    <field name="log_date"/>
                                    <field name="log_text"/>
                                    <field name="device_id"
                                           column_invisible="True"/>
                                    <field name="stamp"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="biometric_device_config_view_tree" model="ir.ui.view">
        <field name="name">biometric.config.tree</field>
        <field name="model">biometric.config</field>
        <field name="arch" type="xml">
            <tree string="Biometric Device">
                <field name="name"/>
                <field name="device_ip"/>
                <field name="port"/>
                <field name="time_zone"/>
            </tree>
        </field>
    </record>

    <record id="action_biometric_device_config_view" model="ir.actions.act_window">
        <field name="name">Biometric Device Config</field>
        <field name="res_model">biometric.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to config a new biometric device.
            </p>
        </field>
    </record>
    <record id="action_server_user_download" model="ir.actions.server">
        <field name="name">Download Users</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_biometric_config"/>
        <field name="binding_model_id" ref="model_biometric_config"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action = records.download_device_users()</field>
    </record>
    <menuitem action="action_biometric_device_config_view"
              id="menu_biometric_device_config"
              parent="hr_attendance.menu_hr_attendance_root"
              sequence="98"
              groups="hr_attendance.group_hr_attendance_manager"/>

</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View for Device Commands -->
    <record id="view_device_command_tree" model="ir.ui.view">
        <field name="name">device.command.tree</field>
        <field name="model">device.command</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="device_id"/>
                <field name="pin"/>
                 <field name="status" widget="badge" decoration-info="status in ('pending', 'executed')"
                        decoration-success="status=='success'" decoration-danger="status=='failed'"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Device Command -->
    <record id="view_device_command_form" model="ir.ui.view">
        <field name="name">device.command.form</field>
        <field name="model">device.command</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="device_id"/>
                        <field name="employee_id"/>
                        <field name="pin"/>
                        <field name="status"/>
                    </group>
                    <group>
                        <field name="execution_log"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to Open Device Commands -->
    <record id="action_device_command" model="ir.actions.act_window">
        <field name="name">Device Commands</field>
        <field name="res_model">device.command</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>

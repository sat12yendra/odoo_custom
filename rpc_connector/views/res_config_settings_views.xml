<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.rpc.connector</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='employee_rights_setting_container']" position="after">
                    <block title="XMLRPC Connector" id="end_xmlrpc_setting">
                        <setting>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="rpc_url" string="URL" class="col-lg-3"/>
                                    <field name="rpc_url"/>
                                </div>
                                <div class="row mt16">
                                    <label for="rpc_db" string="DB" class="col-lg-3"/>
                                    <field name="rpc_db"/>
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="rpc_username" string="User" class="col-lg-3"/>
                                    <field name="rpc_username"/>
                                </div>
                                <div class="row mt16">
                                    <label for="rpc_password" string="Password" class="col-lg-3"/>
                                    <field name="rpc_password" password="True"/>
                                </div>
                            </div>
                            <div class="content-group">
                                 <button name="action_test_rpc_connection"
                                         type="object" string="Test Connection" class="oe_highlight"/>
                            </div>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

<odoo>
    <record id="view_employee_form_rpc" model="ir.ui.view">
        <field name="name">hr.employee.rpc.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="button_get_employee_data" type="object" string="Sync Employee Data" class="btn-primary"/>
            </xpath>
        </field>
    </record>

    <!-- Define the Server Action -->
    <record id="action_sync_employee_data" model="ir.actions.server">
        <field name="name">Sync Employee Data</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="binding_model_id" ref="hr.model_hr_employee"/> <!-- Bind the action to hr.employee -->
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.button_get_employee_data()
        </field>
    </record>
</odoo>

<odoo>
    <record id="view_employee_form_rpc" model="ir.ui.view">
        <field name="name">hr.employee.rpc.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="button_get_employee_data" type="object" string="Get Employee Data" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>

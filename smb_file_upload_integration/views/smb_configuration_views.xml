<odoo>
    <!-- Define the form view for the smb.configuration model -->
    <record id="view_smb_configuration_form" model="ir.ui.view">
        <field name="name">smb.configuration.form</field>
        <field name="model">smb.configuration</field>
        <field name="arch" type="xml">
            <form string="Samba Configuration">
                <header>
                    <!-- Add the Test Connection button in the header -->
                    <button name="test_smb_connection" type="object" class="btn-primary" string="Test Connection"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="smb_ip"/>
                        <field name="smb_username"/>
                        <field name="smb_password" password="True"/>
                        <field name="smb_share_folder"/>
                        <field name="smb_mount_point"/>
                    </group>
                    <footer>
                        <button name="test_smb_connection" type="object" class="btn-primary" string="Test Connection"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Define the tree view for the smb.configuration model -->
    <record id="view_smb_configuration_tree" model="ir.ui.view">
        <field name="name">smb.configuration.tree</field>
        <field name="model">smb.configuration</field>
        <field name="arch" type="xml">
            <tree string="Samba Configurations">
                <field name="name"/>
                <field name="smb_ip"/>
                <field name="smb_username"/>
                <field name="smb_share_folder"/>
                <field name="smb_mount_point"/>
            </tree>
        </field>
    </record>

    <!-- Define the action to open the smb.configuration model -->
    <record id="action_smb_configuration" model="ir.actions.act_window">
        <field name="name">Samba Configurations</field>
        <field name="res_model">smb.configuration</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_smb_configuration_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to add a new Samba Configuration.
            </p>
        </field>
    </record>

    <!-- Define the menu item for Samba Configuration under the Settings menu -->
    <menuitem id="menu_smb_configuration_root" name="Samba Configuration" sequence="1"/>

    <!-- Add a menu entry to open the Samba Configuration action -->
    <menuitem id="menu_smb_configuration" name="Configurations" parent="menu_smb_configuration_root"
              action="action_smb_configuration" sequence="10"/>
</odoo>

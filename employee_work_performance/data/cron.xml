<odoo>
    <data noupdate="1">
        <!-- Define the cron job -->
        <record id="ir_cron_check_tat_date" model="ir.cron">
            <field name="name">Check Task TAT Date</field>
            <field name="model_id" ref="employee_work_performance.model_employee_task"/>
            <field name="state">code</field>
            <field name="code">model.check_tat_date()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active">True</field>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>

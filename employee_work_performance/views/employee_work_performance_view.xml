<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_work_performance_form" model="ir.ui.view">
            <field name="name">employee.work.performance.form</field>
            <field name="model">employee.work.performance</field>
            <field name="arch" type="xml">
                <form string="Employee Work Performance">
                    <sheet>
                        <field name="company_id" invisible="1"/>
                        <group>
                            <group>
                                <field name="employee_id" widget="many2one_avatar_user" required="1"
                                       options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                                <field name="job_id"/>
                                <field name="date"/>
                                <field name="permit_position"/>
                            </group>
                            <group>
                                <field name="department_id"/>
                                <field name="parent_id"/>
                                <field name="year_of_kpi" force_save="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="employee_kpi" string="Employee KPI">
                                <group>
                                    <field name="employee_kpi_ids" string="">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="rating" widget="priority"/>
                                            <field name="remarks"/>
                                        </tree>
                                    </field>
                                </group>
                                <button name="action_send_kpi_mail" type="object" string="Send KPI Email" class="btn-primary"/>
                            </page>
                            <page name="employee_task" string="Employee Task">
                                <field name="employee_task_ids" string="" widget="section_and_note_one2many" mode="tree">
                                    <tree editable="bottom">
                                        <control>
                                            <create name="add_section_control" string="Add a task" context="{'default_display_type':
                                                     'line_section'}"/>
                                            <create name="add_line_control" string="Add a subtask"/>
                                            <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                        </control>
                                        <field name="name" required="not display_type"
                                               widget="section_and_note_text" optional="show"/>
                                        <field name="task_create_date"/>
                                        <field name="task_assign_date"/>
                                        <field name="task_completed_date"/>
                                        <field name="rating" widget="priority" required="not display_type"/>
                                        <field name="remarks"/>
                                        <field name="display_type" column_invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name" required="not display_type"
                                               widget="section_and_note_text" optional="show"/>
                                            <field name="task_create_date"/>
                                            <field name="task_assign_date"/>
                                            <field name="task_completed_date"/>
                                            <field name="rating" widget="priority" required="not display_type"/>
                                            <field name="remarks"/>
                                            <field name="display_type" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                                <div>
                                    <button name="action_send_task_mail" type="object" string="Send Task Email" class="btn-primary"/>
                                </div>
                            </page>
                            <page name="employee_behaviour" string="Employee Behaviour" groups="hrms.group_hr_hod">
                                <group>
                                    <field name="employee_behaviour_ids" string="">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="rating" widget="priority"/>
                                            <field name="remarks"/>
                                        </tree>
                                    </field>
                                </group>
                                <button name="action_send_behaviour_mail" type="object" string="Send Behaviour Email" class="btn-primary"/>
                            </page>
                            <page name="employee_innovation" string="Employee Innovation" invisible="1">
                                <group>
                                    <field name="employee_innovation_ids" string="">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="rating" widget="priority"/>
                                            <field name="remarks"/>
                                        </tree>
                                    </field>
                                </group>
                                <button name="action_send_innovation_mail" type="object" string="Send Innovation Email" class="btn-primary"/>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_employee_work_performance_tree" model="ir.ui.view">
            <field name="name">employee.work.performance.view.tree</field>
            <field name="model">employee.work.performance</field>
            <field name="arch" type="xml">
                <tree string="Employee Work Performance">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="parent_id"/>
                    <field name="date"/>
                    <field name="year_of_kpi"/>
                </tree>
            </field>
        </record>

        <record id="view_employee_work_performance_search" model="ir.ui.view">
            <field name="name">employee.work.performance.view.search</field>
            <field name="model">employee.work.performance</field>
            <field name="arch" type="xml">
                <search string="Employee Work Performance Search">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="parent_id"/>
                    <field name="date"/>
                    <field name="year_of_kpi"/>
                </search>
            </field>
        </record>

        <record id="action_employee_work_performance" model="ir.actions.act_window">
            <field name="name">Employee Work Performance</field>
            <field name="res_model">employee.work.performance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Employee Work Performance
                </p>
            </field>
        </record>
    </data>
</odoo>

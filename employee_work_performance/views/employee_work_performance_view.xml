<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_work_performance_form" model="ir.ui.view">
            <field name="name">employee.work.performance.form</field>
            <field name="model">employee.work.performance</field>
            <field name="arch" type="xml">
                <form string="Employee Work Performance">
                    <sheet>
                        <field name="company_id" invisible="1"/>
                        <group>
                            <group>
                                <field name="employee_id" widget="many2one_avatar_user" required="1"
                                       options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                                <field name="date"/>
                                <field name="kpi_reviewer_ids" widget="many2many_tags" required="1"
                                       options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                                <field name="task_reviewer_ids" widget="many2many_tags" required="1"
                                       options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                                <field name="behaviour_reviewer_ids" widget="many2many_tags" required="1"
                                       options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="department_id"/>
                                <field name="year_of_kpi" force_save="1"/>
                                <field name="job_id"/>
                                <field name="parent_id"/>
                                <field name="permit_position" invisible="1"/>
                                <field name="kpi_tab_visible" invisible="1"/>
                                <field name="task_tab_visible" invisible="1"/>
                                <field name="behaviour_tab_visible" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="employee_kpi" string="Employee KPI" invisible="not kpi_tab_visible">
                                <button name="action_send_kpi_mail" type="object" string="Send KPI Email" class="btn-primary"/>
                                <group>
                                    <field name="employee_kpi_ids" string="">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="manager_rating" readonly="is_hod or is_super_admin"
                                                   groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                            <field name="hod_rating" readonly="is_super_admin"
                                                   groups="hrms.group_hr_hod,base.group_system"/>
                                            <field name="management_rating" groups="base.group_system"/>
                                            <field name="manager_remarks" readonly="is_hod or is_super_admin"
                                                   groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                            <field name="hod_remarks" readonly="is_super_admin"
                                                   groups="hrms.group_hr_hod,base.group_system"/>
                                            <field name="management_remarks" groups="base.group_system"/>
                                            <field name="is_hod" column_invisible="1"/>
                                            <field name="is_super_admin" column_invisible="1"/>
                                        </tree>
                                    </field>
                                </group>
                                <group name="note_group" col="6" class="mt-2 mt-md-0">
                                    <group colspan="4">
                                        <field  colspan="2" name="kpi_note" nolabel="1" placeholder="KPI Note..."/>
                                    </group>
                                    <group class="oe_subtotal_footer" colspan="2">
                                        <label for="kpi_manager_rating_count" groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                        <div class="o_row" name="kpi_manager_rating_count" groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system">
                                            <span><field name="kpi_manager_rating_count"/></span> /<span><field name="kpi_out_of"/></span>
                                        </div>
                                        <label for="kpi_hod_rating_count" groups="hrms.group_hr_hod,base.group_system"/>
                                        <div class="o_row" name="kpi_hod_rating_count" groups="hrms.group_hr_hod,base.group_system">
                                            <span><field name="kpi_hod_rating_count"/></span> /<span><field name="kpi_out_of" /></span>
                                        </div>
                                        <label for="kpi_management_rating_count" groups="base.group_system"/>
                                        <div class="o_row" name="kpi_management_rating_count" groups="base.group_system">
                                            <span><field name="kpi_management_rating_count"/></span> /<span><field name="kpi_out_of" /></span>
                                        </div>
                                    </group>
                                    <div class="clearfix"/>
                                    <group class="oe_subtotal_footer" colspan="2" groups="hrms.group_hr_hod,base.group_system">
                                        <label for="total_kpi_rating_count"/>
                                        <div class="o_row" name="total_kpi_rating_count">
                                            <span><field name="total_kpi_rating_count"/></span> /<span><field name="total_kpi_out_of"/></span>
                                        </div>
                                    </group>
                                    <div class="clearfix"/>
                                </group>
                            </page>
                            <page name="employee_task" string="Employee Task" invisible="not task_tab_visible">
                                <group>
                                    <field name="employee_task_ids" string="" widget="one2many_delete">
                                        <tree decoration-success="state == 'completed'"
                                              decoration-info="state == 'a_new'"
                                              decoration-danger="state == 'b_delayed'">
                                            <field name="name" required="1"/>
                                            <field name="task_create_date"/>
                                            <field name="task_assign_date"/>
                                            <field name="task_tat_date"/>
                                            <field name="task_completed_date"/>
                                            <field name="manager_rating" readonly="is_hod or is_super_admin"
                                                   groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                            <field name="hod_rating" readonly="is_super_admin"
                                                   groups="hrms.group_hr_hod,base.group_system"/>
                                            <field name="management_rating" groups="base.group_system"/>
                                            <field name="manager_remarks" readonly="is_hod or is_super_admin"
                                                   groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                            <field name="hod_remarks" readonly="is_super_admin"
                                                   groups="hrms.group_hr_hod,base.group_system"/>
                                            <field name="management_remarks" groups="base.group_system"/>
                                            <field name="state" widget="badge"
                                                   decoration-success="state == 'completed'"
                                                   decoration-info="state == 'a_new'"
                                                   decoration-danger="state == 'b_delayed'"/>
                                            <field name="is_hod" column_invisible="1"/>
                                            <field name="is_super_admin" column_invisible="1"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="name" required="1"/>
                                                <field name="task_create_date" required="1"/>
                                                <field name="task_assign_date" required="1"/>
                                                <field name="task_tat_date" required="1"/>
                                                <field name="task_completed_date" />
                                                <field name="manager_rating" readonly="is_hod or is_super_admin"
                                                       groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                                <field name="hod_rating" readonly="is_super_admin"
                                                       groups="hrms.group_hr_hod,base.group_system"/>
                                                <field name="management_rating" groups="base.group_system"/>
                                                <field name="manager_remarks" readonly="is_hod or is_super_admin"
                                                       groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                                <field name="hod_remarks" readonly="is_super_admin"
                                                       groups="hrms.group_hr_hod,base.group_system"/>
                                                <field name="management_remarks" groups="base.group_system"/>
                                                <field name="is_hod" invisible="1"/>
                                                <field name="is_super_admin" invisible="1"/>
                                            </group>
                                            <group string="Employee SubTask">
                                                <field name="sub_task_line_ids" string="">
                                                    <tree editable="bottom">
                                                        <field name="name" required="1"/>
                                                        <field name="task_create_date"/>
                                                        <field name="task_assign_date"/>
                                                        <field name="task_completed_date"/>
                                                        <field name="manager_rating" readonly="is_hod or is_super_admin"
                                                               groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                                        <field name="hod_rating" readonly="is_super_admin"
                                                               groups="hrms.group_hr_hod,base.group_system"/>
                                                        <field name="management_rating" groups="base.group_system"/>
                                                        <field name="manager_remarks" readonly="is_hod or is_super_admin"
                                                               groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                                        <field name="hod_remarks" readonly="is_super_admin"
                                                               groups="hrms.group_hr_hod,base.group_system"/>
                                                        <field name="management_remarks" groups="base.group_system"/>
                                                        <field name="is_hod" column_invisible="1"/>
                                                        <field name="is_super_admin" column_invisible="1"/>
                                                    </tree>
                                                </field>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                                <group name="note_group" col="6" class="mt-2 mt-md-0">
                                    <group colspan="4">
                                        <field  colspan="2" name="task_note" nolabel="1" placeholder="Task Note..."/>
                                    </group>
                                    <group class="oe_subtotal_footer" colspan="2">
                                        <label for="task_manager_rating_count" groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                        <div class="o_row" name="task_manager_rating_count" groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system">
                                            <span><field name="task_manager_rating_count"/></span> /<span><field name="task_out_of"/></span>
                                        </div>
                                        <label for="task_hod_rating_count" groups="hrms.group_hr_hod,base.group_system"/>
                                        <div class="o_row" name="task_hod_rating_count" groups="hrms.group_hr_hod,base.group_system">
                                            <span><field name="task_hod_rating_count"/></span> /<span><field name="task_out_of" /></span>
                                        </div>
                                        <label for="task_management_rating_count" groups="base.group_system"/>
                                        <div class="o_row" name="task_management_rating_count" groups="base.group_system">
                                            <span><field name="task_management_rating_count"/></span> /<span><field name="task_out_of" /></span>
                                        </div>
                                    </group>
                                    <div class="clearfix"/>
                                    <group class="oe_subtotal_footer" colspan="2" groups="hrms.group_hr_hod,base.group_system">
                                        <label for="total_task_rating_count"/>
                                        <div class="o_row" name="total_task_rating_count">
                                            <span><field name="total_task_rating_count"/></span> /<span><field name="total_task_out_of"/></span>
                                        </div>
                                    </group>
                                    <div class="clearfix"/>
                                </group>
                            </page>
                            <page name="employee_behaviour" string="Employee Behaviour" invisible="not behaviour_tab_visible">
                                <button name="action_send_behaviour_mail" type="object" string="Send Behaviour Email" class="btn-primary"/>
                                <group>
                                    <field name="employee_behaviour_ids" string="">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="manager_rating" readonly="is_hod or is_super_admin"
                                                   groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                            <field name="hod_rating" readonly="is_super_admin"
                                                   groups="hrms.group_hr_hod,base.group_system"/>
                                            <field name="management_rating" groups="base.group_system"/>
                                            <field name="manager_remarks" readonly="is_hod or is_super_admin"
                                                   groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                            <field name="hod_remarks" readonly="is_super_admin"
                                                   groups="hrms.group_hr_hod,base.group_system"/>
                                            <field name="management_remarks" groups="base.group_system"/>
                                            <field name="is_hod" column_invisible="1"/>
                                            <field name="is_super_admin" column_invisible="1"/>
                                        </tree>
                                    </field>
                                </group>
                                <group name="note_group" col="6" class="mt-2 mt-md-0">
                                    <group colspan="4">
                                        <field  colspan="2" name="behaviour_note" nolabel="1" placeholder="Behaviour Note..."/>
                                    </group>
                                    <group class="oe_subtotal_footer" colspan="2">
                                        <label for="behaviour_manager_rating_count" groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                        <div class="o_row" name="behaviour_manager_rating_count" groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system">
                                            <span><field name="behaviour_manager_rating_count"/></span> /<span><field name="behaviour_out_of"/></span>
                                        </div>
                                        <label for="behaviour_hod_rating_count" groups="hrms.group_hr_hod,base.group_system"/>
                                        <div class="o_row" name="behaviour_hod_rating_count" groups="hrms.group_hr_hod,base.group_system">
                                            <span><field name="behaviour_hod_rating_count"/></span> /<span><field name="behaviour_out_of" /></span>
                                        </div>
                                        <label for="behaviour_management_rating_count" groups="base.group_system"/>
                                        <div class="o_row" name="behaviour_management_rating_count" groups="base.group_system">
                                            <span><field name="behaviour_management_rating_count"/></span> /<span><field name="behaviour_out_of" /></span>
                                        </div>
                                    </group>
                                    <div class="clearfix"/>
                                    <group class="oe_subtotal_footer" colspan="2" groups="hrms.group_hr_hod,base.group_system">
                                        <label for="total_behaviour_rating_count"/>
                                        <div class="o_row" name="total_behaviour_rating_count">
                                            <span><field name="total_behaviour_rating_count"/></span> /<span><field name="total_behaviour_out_of"/></span>
                                        </div>
                                    </group>
                                    <div class="clearfix"/>
                                </group>
                            </page>
                            <page name="employee_innovation" string="Employee Innovation" invisible="1">
                                <group>
                                    <field name="employee_innovation_ids" string="">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="manager_rating" readonly="is_hod or is_super_admin"
                                                   groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                            <field name="hod_rating" readonly="is_super_admin"
                                                   groups="hrms.group_hr_hod,base.group_system"/>
                                            <field name="management_rating" groups="base.group_system"/>
                                            <field name="manager_remarks" readonly="is_hod or is_super_admin"
                                                   groups="hrms.group_hr_user_manager,hrms.group_hr_hod,base.group_system"/>
                                            <field name="hod_remarks" readonly="is_super_admin"
                                                   groups="hrms.group_hr_hod,base.group_system"/>
                                            <field name="management_remarks" groups="base.group_system"/>
                                            <field name="is_hod" column_invisible="1"/>
                                            <field name="is_super_admin" column_invisible="1"/>
                                        </tree>
                                    </field>
                                </group>
                                <button name="action_send_innovation_mail" type="object" string="Send Innovation Email" class="btn-primary"/>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_employee_work_performance_tree" model="ir.ui.view">
            <field name="name">employee.work.performance.view.tree</field>
            <field name="model">employee.work.performance</field>
            <field name="arch" type="xml">
                <tree string="Employee Work Performance">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="parent_id"/>
                    <field name="date"/>
                    <field name="year_of_kpi"/>
                </tree>
            </field>
        </record>

        <record id="view_employee_work_performance_search" model="ir.ui.view">
            <field name="name">employee.work.performance.view.search</field>
            <field name="model">employee.work.performance</field>
            <field name="arch" type="xml">
                <search string="Employee Work Performance Search">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="parent_id"/>
                    <field name="date"/>
                    <field name="year_of_kpi"/>
                    <field name="kpi_note"/>
                    <field name="task_note"/>
                    <field name="behaviour_note"/>
                    <field name="innovation_note"/>
                </search>
            </field>
        </record>

        <record id="action_employee_work_performance" model="ir.actions.act_window">
            <field name="name">Employee Work Performance</field>
            <field name="res_model">employee.work.performance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Employee Work Performance
                </p>
            </field>
        </record>
    </data>
</odoo>

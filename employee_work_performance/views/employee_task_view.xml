<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_task_form" model="ir.ui.view">
            <field name="name">employee.task.form</field>
            <field name="model">employee.task</field>
            <field name="arch" type="xml">
                <form string="Employee Task" create="0" delete="0">
                    <header>
                        <button name="action_done"
                                invisible="state != 'assigned'" string="Done"
                                type="object" icon="fa-cogs" class="oe_highlight" />
                        <field name="state" widget="statusbar" statusbar_visible="a_new,assigned,b_delayed,completed"
                               nolabel="1" readonly="1" />
                    </header>
                    <sheet>
                        <group>
                            <field name="employee_work_performance_id" readonly="1"
                                   options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="task_create_date" readonly="1"/>
                            <field name="task_assign_date" readonly="1"/>
                            <field name="task_completed_date" readonly="state in ['b_delayed', 'completed']"/>
                        </group>
                        <group string="Employee SubTask">
                            <field name="sub_task_line_ids" string="">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="name" readonly="1"/>
                                    <field name="task_create_date" readonly="1"/>
                                    <field name="task_assign_date" readonly="1"/>
                                    <field name="task_completed_date" readonly="parent.state in ['b_delayed', 'completed']"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_employee_task_tree" model="ir.ui.view">
            <field name="name">employee.task.view.tree</field>
            <field name="model">employee.task</field>
            <field name="arch" type="xml">
                <tree string="Employee Task" create="0" delete="0"
                      decoration-muted="state == 'b_delayed'">
                    <field name="name" />
                    <field name="task_create_date"/>
                    <field name="task_assign_date"/>
                    <field name="task_completed_date"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'completed'"
                           decoration-info="state == 'a_new'"
                           decoration-danger="state == 'b_delayed'"/>
                </tree>
            </field>
        </record>

        <record id="view_employee_task_search" model="ir.ui.view">
            <field name="name">employee.task.view.search</field>
            <field name="model">employee.task</field>
            <field name="arch" type="xml">
                <search string="Employee Task Search">
                    <field name="name" />
                    <field name="task_create_date"/>
                    <field name="task_assign_date"/>
                    <field name="task_completed_date"/>
                    <field name="state"/>
                    <searchpanel>
                        <field name="state" limit="0" string="Task Status" icon="fa-filter" color="#875A7B" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="action_employee_task" model="ir.actions.act_window">
            <field name="name">Employee Task Dashboard</field>
            <field name="res_model">employee.task</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>

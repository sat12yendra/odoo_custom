<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record rule -->
    <record id="hr_employee_own_department_records_rule" model="ir.rule">
        <field name="name">Own - Allow managers to view records of employees within their own department only.</field>
        <field name="model_id" ref="model_employee_work_performance"/>
        <field name="domain_force">[
            ('employee_id.department_id', '=', user.employee_id.department_id.id)
        ]</field>
        <field name="groups" eval="[(4, ref('hrms.group_hr_hod')), (4, ref('hrms.group_hr_user_manager'))]"/>
    </record>

    <record id="hr_employee_all_department_records_rule" model="ir.rule">
        <field name="name">All - Allow managers to view records of employees within their own department only.</field>
        <field name="model_id" ref="model_employee_work_performance"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>
</odoo>

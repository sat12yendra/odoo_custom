<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">view.employee.form.inherit.hr</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='mobile_phone']" position="before">
                    <field name="age" />
                    <field name="gender" />
                    <field name="community" />
                </xpath>
                <xpath expr="//field[@name='work_email']" position="after">
                    <field name="nssf_no" />
                    <field name="currency_id" />
                </xpath>
                <xpath expr="//field[@name='job_title']" position="after">
                    <field name="permit_position"  placeholder="Permit Position"/>
                </xpath>
                <xpath expr="//page[@name='skills_resume']" position="inside">
                    <group string="Job Description">
                        <field name="job_description"/>
                        <field name="job_description_file" filename="job_description_file_name"/>
                        <field name="job_description_file_name" invisible="1"/>
                        <field name="letter_of_introduction_file" filename="letter_of_introduction_file_name"/>
                        <field name="letter_of_introduction_file_name" invisible="1"/>
                        <field name="guarantee_letter_file" filename="guarantee_letter_file_name"/>
                        <field name="guarantee_letter_file_name" invisible="1"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='coach_id']" position="after">
                    <field name="tin_no" />
                    <field name="whatsapp_no" />
                    <field name="reviewer_ids" widget="many2many_tags"
                           options="{'no_open': True, 'no_quick_create': True}" />
                </xpath>
                <xpath expr="//page[@name='personal_information']" position="replace">
                    <page name="personal_information" string="Private Information" groups="hr.group_hr_user">
                        <group>
                            <group string="Private Contact">
                                <label for="private_street" string="Private Address"/>
                                <div class="o_address_format">
                                    <field name="private_street" placeholder="Street..." class="o_address_street"/>
                                    <field name="private_street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="private_city" placeholder="City" class="o_address_city"/>
                                    <field name="private_state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'default_country_id': private_country_id}"/>
                                    <field name="private_zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="private_country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="private_email" string="Email"/>
                                <field name="private_phone" string="Phone"/>
                                <field name="bank_account_id" invisible="1"
                                       context="{'default_partner_id': work_contact_id}" options="{'no_quick_create': True}" readonly="not id"/>
<!--                                <field name="lang" string="Language"/>-->
                                <field name="employee_lang_ids" widget="many2many_tags"/>
                                <label for="km_home_work"/>
                                <div class="o_row" name="div_km_home_work">
                                    <field name="km_home_work" class="o_hr_narrow_field"/>
                                    <span>Km</span>
                                </div>
                                <field name="private_car_plate" />
                                <separator name="others" string="Others"/>
                                <field name="pan_no" string="PAN Card No."
                                       filename="pan_no_file_name"/>
                                <field name="aadhaar_no" string="Aadhaar Card No."
                                       filename="aadhaar_no_file_name"/>
                                <field name="alien_card" string="Alien Card"/>
                                <field name="swift_code" string="Swift Code"/>
                                <field name="medical_certificate"/>
                                <field name="pcc_certificate"/>
                                <field name="pan_no_file_name" invisible="1"/>
                                <field name="aadhaar_no_file_name" invisible="1"/>
                                <separator name="family_status" string="Family Status"/>
                                <field name="marital"/>
                                <field name="spouse_complete_name" invisible="marital not in ['married', 'cohabitant']"/>
                                <field name="spouse_birthdate" invisible="marital not in ['married', 'cohabitant']"/>
                                <field name="children"/>
                                <separator name="emergency" string="Emergency"/>
                                <field name="emergency_contact"/>
                                <field name="emergency_phone" class="o_force_ltr"/>
                            </group>
                            <group name="has_work_permit" string="Work Permit">
                                <field name="date_of_joining"/>
                                <field name="visa_no"/>
                                <field name="permit_no"/>
                                <field name="visa_expire" string="Business Visa Exp. Date"/>
<!--                                <field name="business_visa_exp_date"/>-->
                                <field name="special_pass_exp_date"/>
                                <field name="work_permit_expiration_date"/>
                                <field name="work_permit_name" invisible="1"/>
                                <field name="has_work_permit" widget="work_permit_upload" filename="work_permit_name"/>
                                <separator name="citizenship" string="Citizenship"/>
                                <field name="country_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="identification_id"/>
                                <field name="ssnid"/>
                                <field name="passport_id"/>
                                <field name="passport" filename="passport_file_name"/>
                                <field name="passport_exp_date"/>
                                <field name="passport_taken_date"/>
                                <field name="passport_collect_date"/>
                                <field name="birthday"/>
                                <field name="place_of_birth"/>
                                <field name="country_of_birth"/>
                                <field name="passport_file_name" invisible="1"/>
                            </group>
                        </group>
                        <group name="education_details" string="Education Details">
                            <field name="education_detail_line_ids" string="">
                                <tree>
                                    <field name="certificate" />
                                    <field name="study_field" />
                                    <field name="study_school" />
                                    <field name="subject" />
                                    <field name="start_date" />
                                    <field name="end_date" />
                                    <field name="grade" />
                                    <field name="percentage" />
                                </tree>
                                <form>
                                    <group col="4">
                                        <field name="certificate" />
                                        <field name="study_field" />
                                        <field name="study_school" />
                                        <field name="subject" />
                                        <field name="start_date" />
                                        <field name="end_date" />
                                        <field name="grade" />
                                        <field name="percentage" />
                                        <field name="degree" filename="degree_file_name"/>
                                        <field name="degree_file_name" invisible="1"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <group name="bank_details" string="Bank Details">
                            <field name="bank_details_line_ids" string="">
                                <tree editable="bottom">
                                    <field name="bank_id" string="Bank Name"/>
                                    <field name="acc_number" string="Account No."/>
                                    <field name="partner_id" />
                                    <field name="ifsc_code" string="IFSC Code"/>
                                    <field name="branch_name" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[@name='hr_settings']" position="inside">
                    <group name="others" string="Others">
                        <group>
                            <field name="remarks" />
                        </group>
                        <group>
                            <field name="appraisal_last_date" />
                            <field name="appraisal_last_amount" />
                        </group>
                        <group>
                            <field name="offer_letter"
                                       filename="offer_letter_file_name"/>
                            <field name="government_contract_file" filename="government_contract_file_name"/>
                            <field name="experience_letter" filename="experience_letter_file_name"/>
                            <field name="government_contract_file_name" invisible="1"/>
                            <field name="experience_letter_file_name" invisible="1"/>
                            <field name="offer_letter_file_name" invisible="1"/>
                        </group>
                    </group>
                    <group name="compensation_details" string="Compensation Details">
                        <field name="compensation_detail_line_ids" string="">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="amount"/>
                                <field name="currency_id" />
                            </tree>
                        </field>
                    </group>
                </xpath>
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="leave_management" string="Leave Management">
                        <group name="leave_details">
                            <group string="Current Leave Date">
                                <field name="from_current_leave_date" />
                                <field name="to_current_leave_date" />
                                <field name="total_current_days" />
                            </group>
                            <group string="Last Leave Date">
                                <field name="from_last_leave_date" />
                                <field name="to_last_leave_date" />
                                <field name="total_last_days" />
                            </group>
                            <group string="Upcoming Leave Date">
                                <field name="from_upcoming_leave_date" />
                                <field name="to_upcoming_leave_date" />
                                <field name="total_upcoming_days" />
                            </group>
                        </group>
                    </page>
                    <page name="salary_detail" string="Salary Details">
                        <button name="action_populate_salary_details" type="object"
                                string="Populate Salary Details" class="oe_highlight" />
                        <field name="salary_detail_line_ids" string="">
                            <tree editable="bottom">
                                <field name="component_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="salary_type"/>
                                <field name="amount"/>
                                <field name="currency_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="remarks" />
                            </tree>
                        </field>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group class="oe_subtotal_footer" colspan="2" name="salary_total">
                                <field name="total_in_hand_allowance" colspan="2" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_other_allowance" colspan="2" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="clearfix"/>
                            <group class="oe_subtotal_footer" colspan="2" name="salary_total">
                                <field name="total_ctc" colspan="2" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </group>
                    </page>
                    <page string="Note" name="hr_note">
                        <group string="Hr Note">
                            <field  colspan="2" name="salary_hr_note" nolabel="1" placeholder="Hr Note..."/>
                        </group>
                        <group string="Admin Note">
                            <field  colspan="2" name="salary_admin_note" nolabel="1" placeholder="Admin Note..."/>
                        </group>
                    </page>
                    <page string="APPR Settings" name="appr_settings">
                        <group name="appr_others">
                            <group>
                                <field name="appr_remarks" />
                            </group>
                            <group>
                                <field name="appr_appraisal_last_date" />
                                <field name="appr_appraisal_last_amount" />
                            </group>
                            <group>
                                <field name="appr_offer_letter"
                                           filename="appr_offer_letter_file_name"/>
                                <field name="appr_management_note_file" filename="appr_management_note_file_name"/>
                                <field name="appr_directors_note_file" filename="appr_directors_note_file_name"/>
                                <field name="appr_management_note_file_name" invisible="1"/>
                                <field name="appr_directors_note_file_name" invisible="1"/>
                                <field name="appr_offer_letter_file_name" invisible="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="resume_survey_line_view_form_inherited" model="ir.ui.view">
            <field name="name">hr.resume.line.form.inherited</field>
            <field name="model">hr.resume.line</field>
            <field name="inherit_id" ref="hr_skills.resume_line_view_form"/>
            <field eval="99" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_end']" position="after">
                    <field name="resume" filename="resume_file_name"/>
                    <field name="resume_file_name" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_department_form_inherit" model="ir.ui.view">
            <field name="name">hr.department.form.inherit.hr</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="kpi_reviewer_ids" widget="many2many_tags"
                           options="{'no_open': True, 'no_quick_create': True}" />
                    <field name="task_reviewer_ids" widget="many2many_tags"
                           options="{'no_open': True, 'no_quick_create': True}" />
                    <field name="behaviour_reviewer_ids" widget="many2many_tags"
                           options="{'no_open': True, 'no_quick_create': True}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>

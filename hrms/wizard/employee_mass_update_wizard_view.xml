<odoo>
    <record id="view_employee_mass_update_wizard" model="ir.ui.view">
        <field name="name">employee.mass.update.wizard.form</field>
        <field name="model">employee.mass.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Update Employees">
                <group>
                    <group>
                        <field name="company_id"/>
                    </group>
                    <group>
                        <field name="department_id"/>
                    </group>
                    <group>
                        <field name="parent_id"/>
                    </group>
                </group>
                <footer>
                    <button string="Apply" type="object" name="action_apply_mass_update" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

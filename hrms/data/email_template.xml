<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_visa_reminder" model="mail.template">
            <field name="name">Visa Expiration Reminder</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="subject">Reminder of visa renewal</field>
            <field name="email_from"> </field>
            <field name="email_to"> </field>
            <field name="email_cc"> </field>
            <field name="body_html" type="html">
                <p>Hello HR Manager,</p><br> </br>
                <p>This is a courtesy reminder that
                    <t t-esc="object.name or ''"/>
                    visa document will expire on <t t-esc="object.visa_expire and object.visa_expire.strftime('%d %B %Y') or ''"/>.
                </p>
                <p>Please provide an updated document as soon as possible.</p><br> </br><br> </br>
                <p>Africab Group<br> </br>
                Human Resource Department<br> </br>
                Dar Es Salaam, Tanzania<br> </br>
                Email:hr@africab.com</p>
            </field>
        </record>


        <record id="email_template_passport_reminder" model="mail.template">
            <field name="name">Passport Expiration Reminder</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="subject">Reminder of passport renewal</field>
            <field name="email_from"> </field>
            <field name="email_to"> </field>
            <field name="email_cc"> </field>
            <field name="body_html" type="html">
                <p>Hello HR Manager,</p><br> </br>
                <p>This is a courtesy reminder that
                    <t t-esc="object.name or ''"/>
                    passport document will be expire on <t t-esc="object.passport_exp_date and object.passport_exp_date.strftime('%d %B %Y') or ''"/>.
                </p>
                <p>Please provide an updated document as soon as possible.</p><br> </br><br> </br>
                <p>Africab Group<br> </br>
                Human Resource Department<br> </br>
                Dar Es Salaam, Tanzania<br> </br>
                Email:hr@africab.com</p>
            </field>
        </record>

         <record id="email_template_passport_collect_date_expiration_reminder" model="mail.template">
            <field name="name">Passport Collect Date Expiration Reminder</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="subject">Reminder of Passport Submission</field>
            <field name="email_from"> </field>
            <field name="email_to"> </field>
            <field name="email_cc"> </field>
            <field name="body_html" type="html">
                <p>Hello <t t-esc="object.name or ''"/>,</p><br> </br>
                <p>This is a courtesy reminder that please submit your passport to head office.</p>
                <br> </br>
                <p>Africab Group<br> </br>
                Human Resource Department<br> </br>
                Dar Es Salaam, Tanzania<br> </br>
                Email:hr@africab.com</p>
            </field>
        </record>
    </data>
</odoo>
